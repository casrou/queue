@page
@model QueueSystemRazor.Pages.Admin.Members.CreateModel

@{
    ViewData["Title"] = "Opret";
}

<h2>Opret nyt medlem</h2>

<h4>Medlem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label"></label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.PhoneNo" class="control-label"></label>
                <input asp-for="Member.PhoneNo" class="form-control" />
                <span asp-validation-for="Member.PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Age" class="control-label"></label>
                <input asp-for="Member.Age" class="form-control" />
                <span asp-validation-for="Member.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Member.IsMember" /> @Html.DisplayNameFor(model => model.Member.IsMember)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Tilbage til alle medlemmer</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
